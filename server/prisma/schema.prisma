generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:myfamilyisimportant@localhost:5432/pogsmarket-test?schema=public"
}

model Pogs {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  ticker_symbol   String    @unique
  previous_price  Float
  current_price   Float
  color           String
}

model UserPogs {
  id              Int       @id @default(autoincrement())
  pogs_id         Int       
  user_id         Int       
}

model User {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  email           String    @unique
  password        String    @unique
  is_admin        Boolean   
  wallet          Float
}